<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_contentimages</name>
	<creationDate>21 Oktober 2016</creationDate>
	<author>Niels Nübel</author>
	<authorEmail>info@niels-nuebel.de</authorEmail>
	<authorUrl>http://www.niels-nuebel.de</authorUrl>
	<copyright>Copyright © 2013 - 2016 niels-nuebel.de</copyright>
	<version>1.0.1</version>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<description>PLG_SEARCH_CONTENTIMAGES_XML_DESCRIPTION</description>
	<files>
		<filename plugin="contentimages">contentimages.php</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="search_limit"
					type="text"
					label="PLG_SEARCH_CONTENTIMAGES_FIELD_SEARCHLIMIT_LABEL"
					description="PLG_SEARCH_CONTENTIMAGES_FIELD_SEARCHLIMIT_DESC"
					default="50"
					size="5"
				/>

				<field
					name="search_contentimages"
					type="radio"
					label="PLG_SEARCH_CONTENTIMAGES_FIELD_CONTENT_LABEL"
					description="PLG_SEARCH_CONTENTIMAGES_FIELD_CONTENT_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>

				<field
					name="search_archived"
					type="radio"
					label="PLG_SEARCH_CONTENTIMAGES_FIELD_ARCHIVED_LABEL"
					description="PLG_SEARCH_CONTENTIMAGES_FIELD_ARCHIVED_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
